<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="WpfApp1.Klienta_Logs"
        mc:Ignorable="d"
        Title="Klienta_Logs" Height="720" Width="1280" Background="#FF404040">

    <Grid>
        <Image Source="/Images/Logo.png" Margin="0,579,972,0" Height="110" />
        <hc:SideMenu HorizontalAlignment="Left" Height="479" VerticalAlignment="Top" Width="300">
            <hc:SideMenu.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#360147" Offset="0.0" />
                    <GradientStop Color="#011636" Offset="1.0" />
                </LinearGradientBrush>
            </hc:SideMenu.Background>
            <Button Content="Button" Height="100" Width="75"/>
        </hc:SideMenu>

        <hc:Carousel HorizontalAlignment="Left" Margin="300,174,0,0" VerticalAlignment="Top" Width="972" Height="300"/>
        <hc:ScrollViewer HorizontalAlignment="Left" Height="210" Margin="300,479,0,0" VerticalAlignment="Top" Width="972" Background="#FF6E6E6E">
            <TextBlock TextWrapping="Wrap" Text="TextBlock"/>
        </hc:ScrollViewer>
    </Grid>
</Window>
